{
    "openapi": "3.0.0",
    "info": {
        "title": "Diwa",
        "description": "Diwa is an unofficial simple API from [distrowatch.com](https://distrowatch.com/)",
        "contact": {
            "email": "mzulfahmi807@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/distribution": {
            "get": {
                "tags": [
                    "Distribution"
                ],
                "summary": "Get all Distribution",
                "operationId": "getAllDistribution",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/distribution/{name}": {
            "get": {
                "tags": [
                    "Distribution"
                ],
                "summary": "Get distribution information detail",
                "description": "If {name} not found, will return 404",
                "operationId": "getDistributionById",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Distribution Name",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "ubuntu"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/news": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Get all distribution and weekly news",
                "description": "Return latest 12 news and 1 sponsor news",
                "operationId": "getAllDistributionNews",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/news/{id}": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Get Distribution News information detail",
                "description": "If {news_id} not found, distrowatch.com will return the home page. make sure {news_id} is correct",
                "operationId": "getDistributionNewsById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "News Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "11302"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/filter/news": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Get specific distribution news",
                "description": "If one of the {params} not found, distrowatch.com will return the home page with default params(all). make sure all {params} are correct",
                "operationId": "FilterDistributionNews",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Distribution Name",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "ubuntu"
                    },
                    {
                        "name": "release",
                        "in": "query",
                        "description": "Release Version",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "stable"
                    },
                    {
                        "name": "month",
                        "in": "query",
                        "description": "Month",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "all"
                    },
                    {
                        "name": "year",
                        "in": "query",
                        "description": "Year",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "2021"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api": {
            "get": {
                "tags": [
                    "Home"
                ],
                "summary": "Get all endpoints and info about this API",
                "operationId": "home",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/params/ranking": {
            "get": {
                "tags": [
                    "Ranking"
                ],
                "summary": "Get all available parameters for filter the ranking (below ↓)",
                "operationId": "GetAllAvailableParametersRanking",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/params/news": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Get all available parameters for filter the news (above ↑)",
                "operationId": "GetAllAvailableParametersNews",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/ranking": {
            "get": {
                "tags": [
                    "Ranking"
                ],
                "summary": "Get top 100 distribution ranking of last 6 months",
                "operationId": "GetTop100Rangking",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/ranking/{slug}": {
            "get": {
                "tags": [
                    "Ranking"
                ],
                "summary": "Get top 100 distribution ranking but with parameter",
                "description": "If {slug} not found, distrowatch.com will return the home page with default ranking(last 6 months). make sure {slug} is correct",
                "operationId": "getRankingnByParams",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Distribution Slug",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "trending-1"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/params/search": {
            "get": {
                "tags": [
                    "Distribution"
                ],
                "summary": "Get all available parameters for search the distribution (below ↓)",
                "operationId": "GetAllAvailableParametersForSearch",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/search": {
            "get": {
                "tags": [
                    "Distribution"
                ],
                "summary": "Get specific distribution",
                "description": "If one of the {params} not found/empty, distrowatch.com will used default params(All)",
                "operationId": "FilterDistribution",
                "parameters": [
                    {
                        "name": "ostype",
                        "in": "query",
                        "description": "OS Type",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Linux"
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Distribution Category",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "origin",
                        "in": "query",
                        "description": "Country of Origin",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "basedon",
                        "in": "query",
                        "description": "Based on",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Ubuntu"
                    },
                    {
                        "name": "notbasedon",
                        "in": "query",
                        "description": "Not Based on",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "None"
                    },
                    {
                        "name": "desktop",
                        "in": "query",
                        "description": "Desktop Interface",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Xfce"
                    },
                    {
                        "name": "architecture",
                        "in": "query",
                        "description": "Architecture",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "package",
                        "in": "query",
                        "description": "Package Management",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "rolling",
                        "in": "query",
                        "description": "Release Model",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "isosize",
                        "in": "query",
                        "description": "Install Media Size",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "netinstall",
                        "in": "query",
                        "description": "Install Method",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "language",
                        "in": "query",
                        "description": "Multi Language Support",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "defaultinit",
                        "in": "query",
                        "description": "Init Sofrware",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "All"
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Status",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Active"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/weekly": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Get all weekly news",
                "description": "Warning!, big size response",
                "operationId": "getAllWeeklyNews",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/weekly/{id}": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Get weekly news information detail",
                "description": "If {weekly_id} not found, distrowatch.com will return the latest weekly news. make sure {weekly_id} is correct",
                "operationId": "getWeeklyNewsById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Weekly News Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "20210719"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Distribution",
            "description": "API Endpoints of Distribution"
        },
        {
            "name": "News",
            "description": "API Endpoints of News"
        },
        {
            "name": "Home",
            "description": "API Endpoints of Home"
        },
        {
            "name": "Ranking",
            "description": "API Endpoints of Ranking"
        }
    ],
    "security": [
        []
    ]
}